{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "src",
        "paths": {
            "#customAlias/*": ["very/long/path/to/file/*"]
        },
        "plugins": [{ "transform": "typescript-transform-paths" }],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*"
    ]
}